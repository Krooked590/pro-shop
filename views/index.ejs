<% include ./partials/header %>
<h1>Mikes App!</h1>
<a href="/customers/new">CREATE CUSTOMER</a>
<ul id="customers">
    <% for(var key in customers) { %>
        <% if (customers.hasOwnProperty(key)) { %>
            <li><%= customers[key].contactInfo.firstName %> <%= customers[key].contactInfo.lastName %> <a href="/customers/<%= customers[key].id %>">view</a></li>
            <form method="POST" action="/customers/<%= customers[key].id %>?_method=DELETE">
                <button>Delete</button>
            </form>
            <% } %>
        <% } %>
</ul>
<% include ./partials/footer %>