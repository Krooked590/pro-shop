<link rel="stylesheet" href="/styles/show.css">

<div>
    <div class="row">
        <div class="col pageHeader">
            <h1><%= customer.contactInfo.firstName %> <%= customer.contactInfo.lastName %></h1>
            <div class="right">
                <button type="button" class="btn btn-primary someSpace"
                    onclick="get('customers/<%= customer.id %>/edit')"><i class="material-icons">edit</i></button>
                <form id="deleteForm" method="POST" action="/customers/<%= customer.id %>?_method=DELETE"
                    style="display: inline">
                    <button type="button" class="btn btn-danger someSpace"
                        onclick="confirmDelete(document.getElementById('deleteForm'))"><i
                            class="material-icons">delete_forever</i></button>
                </form>
                <!-- <button onclick="get('customers')">Home</button> -->
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <h5>
                <a href="mailto:<%= customer.contactInfo.email %>">Email: <%= customer.contactInfo.email %></a>
            </h5>
            <h5>
                <a href="tel:<%= customer.contactInfo.phoneNumber %>">Phone: <%= customer.contactInfo.phoneNumber %></a>
            </h5>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <p>Notes: <%= customer.notes %></p>
        </div>
    </div>

    <hr>
    <h2>Layout Info:</h2>
    <p>Ball Name: <%= customer.ballLayouts[0].ballName %></p>
    <p>Middle Forward Pitch: <%= customer.ballLayouts[0].middleForwardPitch %></p>
    <p>Middle Side Pitch L: <%= customer.ballLayouts[0].middleSidePitchL %></p>
    <p>Middle Side Pitch R: <%= customer.ballLayouts[0].middleSidePitchR %></p>
    <p>Middle Reverse Pitch: <%= customer.ballLayouts[0].middleReversePitch %></p>
    <p>Middle Hole Size: <%= customer.ballLayouts[0].middleHoleSize %></p>
    <p>Middle Insert Size: <%= customer.ballLayouts[0].middleInsertSize %></p>
    <p>Ring Forward Pitch: <%= customer.ballLayouts[0].ringForwardPitch %></p>
    <p>Ring Side Pitch L: <%= customer.ballLayouts[0].ringSidePitchL %></p>
    <p>Ring Side Pitch R: <%= customer.ballLayouts[0].ringSidePitchR %></p>
    <p>Ring Reverse Pitch: <%= customer.ballLayouts[0].ringReversePitch %></p>
    <p>Ring Hole Size: <%= customer.ballLayouts[0].ringHoleSize %></p>
    <p>Ring Insert Size: <%= customer.ballLayouts[0].ringInsertSize %></p>
    <p>Bridge Spacing: <%= customer.ballLayouts[0].bridgeSpacing %></p>
    <p>Middle Actual: <%= customer.ballLayouts[0].middleActual %></p>
    <p>Middle Cut: <%= customer.ballLayouts[0].middleCut %></p>
    <p>Ring Actual: <%= customer.ballLayouts[0].ringActual %></p>
    <p>Ring Cut: <%= customer.ballLayouts[0].ringCut %></p>
    <p>Thumb Forward Pitch: <%= customer.ballLayouts[0].thumbForwardPitch %></p>
    <p>Thumb Reverse Pitch: <%= customer.ballLayouts[0].thumbReversePitch %></p>
    <p>Thumb Side Pitch L: <%= customer.ballLayouts[0].thumbSidePitchL %></p>
    <p>Thumb Side Pitch R: <%= customer.ballLayouts[0].thumbSidePitchR %></p>
    <p>Oval Angle: <%= customer.ballLayouts[0].ovalAngle %></p>
</div>